<Window x:Class="inventory_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inventory_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="pnlMainGrid" MouseUp="pnlMainGrid_MouseUp" Background="AliceBlue" MouseDown="pnlMainGrid_MouseDown">
        <TextBlock Text="Welcome to the Inventory Management System" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24"/>
        <Button Content="Add Item" 
                Width="100" 
                Height="30"
                FontWeight="UltraBold"
                FontFamily="Microsoft Himalaya"
                FontSize="16"
                Cursor="Hand"
                Margin="10,300,10,10"/>
    </Grid>
</Window>
